{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Debug index encoding/decoding (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/candecomp",
            "args": ["${input:inputFile}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.pretty-printing true",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true
            },
            
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Build and Debug candecomp (lldb)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/candecomp",
            "args": ["${input:inputFile}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.pretty-printing true",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true
            },
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Build and Debug mttkrp_test (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/mttkrp_test",
            "args": [
                "${workspaceFolder}/MTTKRP_test/${input:tensor_name}/${input:tensor_name}_processed.txt",
                "${workspaceFolder}/MTTKRP_test/${input:tensor_name}/factor_matrices.txt",
                "${workspaceFolder}/MTTKRP_test/${input:tensor_name}/mttkrp_answers.txt",
                "${input:mttkrp_alg}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "logging": {
                "engineLogging": true
            },
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "inputs": [
        {
            "id": "inputFile",
            "type": "promptString",
            "description": "Enter the input file for candecomp",
            "default": "MTTKRP_test/uber/uber_processed.txt"
        },
        {
            "id": "tensor_name",
            "type": "promptString",
            "description": "Enter the name of the tensor directory (e.g., 'uber')",
            "default": "uber"
        },
        {
            "id": "mttkrp_alg",
            "type": "promptString",
            "description": "Serial (0) or parallel (1) algorithm",
            "default": "1"
        }
    ]
}
